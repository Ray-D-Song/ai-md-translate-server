{
  "name": "ai-md-translate-server",
  "version": "0.1.0",
  "description": "Markdown Translator with ChatGPT",
  "main": "translate-server",
  "bin": {
    "ai-md-translate-server": "translate-server"
  },
  "scripts": {
    "build": "bun build src/server.ts --compile --outfile translate-server",
    "format": "biome format --write ./src ./biome.json",
    "lint": "biome lint ./src",
    "ci": "biome ci ./src"
  },
  "keywords": [
    "cli",
    "markdown",
    "chatgpt",
    "translator"
  ],
  "author": "Ray-D-Song <songraysmail@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ray-D-Song/ai-md-translate-server.git"
  },
  "type": "module",
  "dependencies": {
    "dashdash": "^2.0.0",
    "dotenv": "^16.0.3",
    "https-proxy-agent": "^6.2.0",
    "node-fetch": "^3.3.2",
    "picocolors": "^1.0.0",
    "pino": "^9.5.0",
    "string-width": "^7.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@types/bun": "^1.1.14",
    "@types/dashdash": "^1.14.1",
    "@types/node": "^20.5.7"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
